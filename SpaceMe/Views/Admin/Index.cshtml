@model IEnumerable<SpaceMe.Models.Post>

@{
    ViewBag.Title = "Index";
}

<div class="adminform">
    <p>
        @Html.ActionLink("Create new post", "Create") |
        @Html.ActionLink("Create new admin", "NewAdmin")
    </p>
    <table class="table table-hover">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.Image)</th>
            <th>@Html.DisplayNameFor(model => model.Title)</th>
            <th>@Html.DisplayNameFor(model => model.Description)</th>
            <th>@Html.DisplayNameFor(model => model.PostedOn)</th>
            <th>@Html.Label("Manage")</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                <td><img src="Admin/RetrieveImage/@item.Id" alt="" height=100 width=200 /></td>
                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td>@Html.DisplayFor(modelItem => item.PostedOn)</td>
                <td>
                    @Html.ActionLink("Edit", "Update", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </table>
</div>

